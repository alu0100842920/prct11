\section{Segunda Sección}

%++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  
\begin{frame}

\frametitle{Fórmulas}

\begin{block}{Ejemplos}
  \begin{itemize}
  \item
  $$\int_{0}^{1} \! \frac{4}{1+x^2}\, dx = 4(atan(1) -atan(0)) = \pi $$
  \pause

  \item
  $$ \int_{-\infty}^\infty e^{-x^2} \, dx = \sqrt{\pi}$$
  \pause

  \item
  $$ \sin^2 \pi + \cos^2 \pi = 1 $$
  \pause
  

  \end{itemize}
\end{block}

\end{frame}

